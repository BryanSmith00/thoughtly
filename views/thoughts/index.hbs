<h1>Thoughts</h1>
<div class="row">
    {{#each thoughts}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content center-align">
                    <p>{{text}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="User image">
                        <a href="/thoughts/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>

                <div class="card-action center-align">
                    <a href="/thoughts/{{_id}}" class="btn grey">Read more</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No public thoughts to display</p>
    {{/each}}
</div>